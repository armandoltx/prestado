  <div class="index-female ifm">
  <div class="row">
    <h1>Women</h1>
    <div class="col-xs-12 col-md-9 index-content female-content">
      <div class="latest">
        <div class="row">
          <div class="col-xs-12">
          </div>
          <% @products.each do |key, cat_products| %>
          <% cat_products.each do |product| %>
          <a href="<%= product_path product %>"> <%# 3 ways product || product_path product.id %>
            <div class="col-xs-12 col-md-3 wrap-products gender female">
              <figure>
              <% if not product.main_image_url.empty? %>
                <img src="<%= product.main_image_url %>" alt="" class="occasion-image img-responsive" />
                <%# To get the image I created a method in product.rb in the model so we can use everywhere in products view, contorller and model  %>
              <% else %>
              <!-- <img class="img-responsive" src="http://www.fillmurray.com/300/200" alt="" /> -->
                <%= image_tag( 'logo.png', :class => 'logo-img img-responsive') %>
              <% end %>
              </figure>
              <div class="wrap-text">
                <h3><%= product.name %></h3>
              </div><!-- end wrap-text -->
            </div><!-- end wrap-products -->
          <% end %>
          <% end %>
          </a><!-- end link -->
        </div><!-- end row -->
      </div><!-- end container -->
    </div><!-- end index-content -->

    <div class="col-xs-12 col-md-3 index-sidebar female-sidebar">
      <%= render 'search_product_form' %>

          <% @products.each do |category_id, cat_products| %>
            <h3><%= @categories[category_id].name unless category_id.nil? %></h3>
            <ul>
            <% cat_products.each do |product| %>
              <li><%= link_to product.name, product %></li>
            <% end %>
          </ul>
          <% end %>
    </div><!-- end index-sidebar -->
  </div><!-- end row -->
</div><!-- end index-female -->

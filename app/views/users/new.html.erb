<div class="col-sx-4 col-md-4 col-md-offset-3">
      <div class="container-form">
        <div class="wrapper">
          <h1>Sign Up</h1>
        <%# =========    In case there is any error %>

          <%# ========= FORM %>
          <%= form_for @user do |f| %>
          <div class="input-group">
            <%= f.text_field :name, :autofocus => true, :required => true %>
            <%= f.label :name, class: 'label' %>
          </div>
          <div class="input-group">
            <%=  f.text_field :email, :required => true %>
            <%= f.label :email, class: 'label' %>
          </div>
          <div class="input-group">
            <%= f.text_field :address, :required => true %>
            <%= f.label :address, class: 'label' %>
          </div>
          <div class="input-group">
            <p>Cloudinary</p>
            <label class="label" for="image">Image:</label>
          </div>
          <div class="input-group">
            <%= f.password_field :password, :required =>true %>
            <%= f.label :password, class: 'label' %>
          </div>
          <div class="input-group">
            <%= f.password_field :password_confirmation, :required =>true %>
            <%= f.label :password_confirmation, class: 'label' %>
          </div>
          <%= f.submit "Sign Up", :class => 'submit' %>
          <% end %>
        </div>
      </div>
</div>


<section class="login-page">
  <div class="container">
    <div class="col-xs-12 login-page-header">
      <h1>Sorry, you did not log properly</h1>
      <p>Please login</p>
    </div>
    <div class="col-xs-12 login-page-form container-form">
      <div class="wrapper form">
      <%= form_tag '/login' do %>
      <div class="input-group">

        <%=  text_field :email, nil, placeholder: 'email', :required => true %>
      </div>
      <div class="input-group">
        <%= password_field_tag :password , nil, placeholder: 'password', :required => true %>
      </div>
        <%= submit_tag 'login' %>
      <% end %>
    </div>
  </div>

</section>
